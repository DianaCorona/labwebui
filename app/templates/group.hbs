<div class="row">
    <div class="container">
        <div class="text-center">
            <h1>Crear Grupo</h1>

        </div>
	    <div class="col-md-8">
                <div class="container">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">

                <form {{action 'createGroup' model   on= 'submit'}} class="well">

                        <div class="form-group">
                            <label>Nombre del Grupo</label>
                            {{input value=model.group.name  class="form-control"}}
                        </div>

                            <div class="form-group">
                                <label>Caducidad</label>
                              	{{date-picker class="form-control" value=model.group.exp_date}}
                            </div>
                            <div class="form-group">

                              
                            </div>

                                <p class="text-center">
                                    <button type="submit" class="btn btn-primary">Crear Grupo</button>
                                </p>
		            </form>


                    </div>
                    <div class="col-md-2"></div>
                </div>
	    </div>

	</div>
</div>
