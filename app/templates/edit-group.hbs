<div class="row">
    <div class="container">
        <div class="text-center">
            <h1>Edita Grupo</h1>
        </div>
	    <div class="col-md-8">
                <div class="container">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">

                <form class="well">

                        <div class="form-group">
                            <label>Nombre del Grupo</label>
                            {{input value=model.grupos.name class="form-control"}}
                        </div>

                            <div class="form-group">
                                <label>Caducidad</label>
                                {{date-picker value=model.grupos.expDate type="text" class="form-control"}}
                            </div>

                                <p class="text-center">
                                    <button type="submit" class="btn btn-primary" {{action 'editar' model bubbles=false}}>Guardar Cambios</button>
                                    <button type="submit" class="btn btn-primary">Cancelar</button>
                                </p>

                                <p>
                                  {{input value=query    class="form-control" placeholder="Buscar"}}

                                </p>

                                  <p>{{user-list x=filteredModel  id_g=model.grupos.id}}</p>
		            </form>


                {{!-- {{#each model.usuarios as |item|}}

                  <div class="list-group-item">

                    <h4>Nombre: {{item.name}}</h4>
                  </div>


                  {{/each}} --}}


                    </div>
                    <div class="col-md-2"></div>
                </div>
	    </div>

	</div>
</div>
