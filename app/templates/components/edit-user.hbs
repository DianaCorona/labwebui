
{{#if isEditing}}
	<form class="well">
		<div class="form-group">
	        <label>Nickname</label>
	        {{input value=user.nickname class="form-control"}}
	    </div>
	    <div class="form-group">
	        <label>Nombre</label>
	        {{input value=user.name class="form-control"}}
	    </div>
	    <div class="form-group">
	        <label>Apellidos</label>
	        {{input value=user.lastName type="text" class="form-control"}}
	    </div>
	    <div class="form-group">
	        <label>Correo electronico</label>
	        {{input value=user.email type="text" class="form-control"}}
	    </div>
	    <div class="form-group">
	        <label>Telefono</label>
	        {{input value=user.phone type="text" class="form-control"}}
	    </div>
	    <div class="form-group">
	        <label>Fecha de nacimiento</label>
	          {{date-picker value=user.birthday class="form-control" }}
	    </div>
	    <p class="text-center">
	        <button class="btn btn-primary" {{action 'saveUser' user bubbles=false}} >
	        	Guardar
	        </button>
	        <button class="btn btn-primary" {{action 'cancel' user bubbles=false}} >
	        	Cancelar
	        </button>
	    </p>
	</form>
{{else}}
	<form class="well">
		<div class="form-group">
	        <label>Nickname</label>
	        <input type='text' value={{user.nickname}} readonly class="form-control" >
	    </div>
	    <div class="form-group">
	        <label>Nombre</label>
	        <input type='text' value={{user.name}} readonly class="form-control" >
	    </div>
	    <div class="form-group">
	        <label>Apellidos</label>
	        <input type='text' value={{user.lastName}} readonly type="text" class="form-control">
	    </div>
	    <div class="form-group">
	        <label>Correo electronico</label>
	        <input type='text' value={{user.email}} readonly type="text" class="form-control">
	    </div>
	    <div class="form-group">
	        <label>Telefono</label>
	        <input type='text' value={{user.phone}} readonly type="text" class="form-control">
	    </div>
	    
	    <p class="text-center">
	        <button class="btn btn-primary" {{action 'enterEditMode'  bubbles=false}} >
	        	Editar
	        </button>
	        <button class="btn btn-danger" {{action 'cancelAccount' user bubbles=false}} >
	        	Eliminar cuenta
	        </button>
	    </p>
	</form>
{{/if}}
