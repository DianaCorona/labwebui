<div class="row">
    <div class="container">
        <div class="text-center">
            <h1>Bienvenid@ {{model.nickname}}</h1>
        </div>
	    <div class="col-md-7">
                <div class="container">
                   <div class="col-md-2"></div>
                    <div class="col-md-6">

                    <form class="well">

                            <div class="form-group">
                                <label>Nombre</label>
                                {{input value=model.name class="form-control"}}
                            </div>

                                <div class="form-group">
                                    <label>Apellidos</label>
                                    {{input value=model.Last_name type="text" class="form-control"}}
                                </div>
                                <div class="form-group">
                                    <label>Correo electronico</label>
                                    {{input value=email type="text" class="form-control"}}
                                </div>
                                <div class="form-group">
                                    <label>Fecha de nacimiento</label>
                                      {{date-picker class="form-control" value=model.birthday}}
                                </div>

                                <p class="text-center">
                                    <button type="submit" class="btn btn-primary">Actualizar</button>
                                    <button type="submit" class="btn btn-danger">Eliminar Cuenta</button>
                                </p>
                        </form>


                    </div>
                </div>
	    </div>
	    <div class="col-md-3"></div>
	    <div class="col-md-2">


	            <div class="panel panel-default">
                  <div class="panel-body">Grupos</div>
                </div>
                 <div class="panel panel-default">
                  <div class="panel-body">Notas</div>
                </div>
                 <div class="panel panel-default">
                  <div class="panel-body">Calendario</div>
                </div>
	    </div>
	</div>
</div>
